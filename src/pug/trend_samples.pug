mixin chart
  .
    <div class="chart_container" >
      <canvas id="myChart"></canvas>
    </div>
    <script>
      var dataset1 = {
            lineTension: 0,
            label: '# of Votes',
            data: [ 12, 19, 3, 5, 2, 3 ],
            backgroundColor: [
              'rgba(192, 57, 43,0.2)'
            ],
            borderColor: [
              'rgba(192, 57, 43,1.0)'
            ],
            borderWidth: 1
          };
      var dataset2 = {
            lineTension: 0,
            label: '# of Votes',
            data: [ 13, 22, 22, 3, 55, 11 ],
            backgroundColor: [
              'rgba(22, 160, 133,0.2)'
            ],
            borderColor: [
              'rgba(22, 160, 133,1.0)'
            ],
            borderWidth: 1
          };

      var option_settings = {
          scales: {
            yAxes: [ {
              ticks: {
                beginAtZero: true
              }
            } ]
          },
          maintainAspectRatio: false
          };

      var data_input = {
          labels: [ '1', '2', '3', '4', '5', '6' ],
          datasets: [ dataset1,dataset2
          ],
        };
      var ctx = document.getElementById( 'myChart' ).getContext( '2d' );
      var myChart = new Chart( ctx, {
        type: 'line',
        data: data_input,
        options: option_settings,
        }
      );
    </script>

